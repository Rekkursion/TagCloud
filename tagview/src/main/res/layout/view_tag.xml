<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <!-- the text-view for showing the tag string -->
        <TextView
                android:id="@+id/txtv_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <!-- the image-button for closing (removing) this tag-view -->
        <ImageButton
                android:id="@+id/imgbtn_close"
                android:contentDescription="@string/str_close"
                android:src="@drawable/ic_close_black_12dp"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</HorizontalScrollView>