<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    android:id="@+id/hsv_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <!-- the text-view for showing the tag string -->
        <TextView
                android:id="@+id/txtv_string"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <!-- the text-view for showing the appearing times -->
        <TextView
                android:id="@+id/txtv_appearing_times"
                android:textSize="20sp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <!-- the image-button for closing (removing) this tag-view -->
        <ImageButton
                android:id="@+id/imgbtn_close"
                android:contentDescription="@string/str_close"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</HorizontalScrollView>