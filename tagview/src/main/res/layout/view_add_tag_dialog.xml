<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/txtvSelect"
                android:text="@string/str_select_a_tag"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <Button
                android:id="@+id/btnOrAddNew"
                android:text="@string/str_or_create_a_new_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/buttonBarButtonStyle" />

        <EditText
                android:id="@+id/edtAddNew"
                android:inputType="text"
                android:hint="@string/str_enter_a_new_tag"
                android:importantForAutofill="no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="LabelFor" />

        <Button
                android:id="@+id/btnBackToSelect"
                android:text="@string/str_back_to_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/buttonBarButtonStyle" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>