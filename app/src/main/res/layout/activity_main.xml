<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.rekkursion.tagview.TagCloud
            android:id="@+id/tag_cloud"
            app:is_indicator="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <EditText
            android:id="@+id/edt_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/btn_add_tag"
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/btn_set_is_indicator_or_not"
            android:text="Set is_indicator or not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/btn_show_or_hide_appearing_times"
            android:text="Show or hide appearing times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />






    <com.rekkursion.tagview.TagCloud
            android:layout_marginTop="100dp"
            app:is_showing_appearing_times="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</androidx.appcompat.widget.LinearLayoutCompat>